#include<stdio.h>

int main(void)
{
	/* ******************* Homework_one ****************************** */
	/*******Ex1*******/
	short int num=0;
	printf("Please enter an integer number you want to check : \r\n");
	fflush(stdout);
	scanf("%hd",&num);
	fflush(stdin);

	if(num%2==0)printf("%d is even \r\n",num);
	else printf("%d is odd \r\n",num);
	fflush(stdout);



	return 0;
}
