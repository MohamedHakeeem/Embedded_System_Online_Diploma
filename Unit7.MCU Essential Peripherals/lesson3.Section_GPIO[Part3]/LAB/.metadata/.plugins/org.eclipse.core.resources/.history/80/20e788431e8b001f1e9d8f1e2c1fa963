void clock_init() {
	//Enable clock GPIOA
	MCAL_GPIO_Enable_ClocK(GPIOA);
	//Enable clock GPIOB Bit 3 IOPBEN: IO port B clock enable
	MCAL_GPIO_Enable_ClocK(GPIOB);
}
